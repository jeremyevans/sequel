# This file is only used for TravisCI integration.

source 'http://rubygems.org'

gem 'minitest-hooks'
gem 'minitest-shared_description'
gem 'minitest-global_expectations'

# Plugin/Extension Dependencies
gem 'tzinfo'

if RUBY_VERSION < '2.1.0'
  gem 'nokogiri', '<1.7.0'
elsif RUBY_VERSION < '2.3.0'
  gem 'nokogiri', '<1.10.0'
else
  gem 'nokogiri'
end

if RUBY_VERSION < '2.2.0'
  gem 'activemodel', '<4.0.0'
elsif RUBY_VERSION < '2.4.0'
  gem 'activemodel', '<6.0.0'
else
  gem 'activemodel'
end

if RUBY_VERSION < '2.0.0'
  gem 'json', '<1.8.5'
  gem 'rake', '<10.0.0'
else
  gem 'json'
  gem 'rake'
end

if RUBY_VERSION < '2.4.0'
  # Until mintest 5.12.0 is fixed
  gem 'minitest', '5.11.3'
else
  gem 'minitest', '>= 5.7.0'
end

# MRI Adapter Dependencies
platforms :ruby do
  sequel_pg = RUBY_VERSION.split('.')[1].to_i.send(Time.now.yday.even? ? :even? : :odd?)

  gem "sqlite3"
  if RUBY_VERSION < '2.0.0'
    gem "pg", '<0.19.0'
    gem "mysql2", '<0.5'
  else
    gem "pg", RUBY_VERSION < '2.2.0' ? '<1.2.0' : '>0'
    gem "mysql2"
  end

  # Test current sequel_pg on half of the MRIs, and pure-ruby on the other half
  if sequel_pg
    gem 'sequel_pg', github: 'jeremyevans/sequel_pg', require: 'sequel'
  end
end

# JRuby Adapter Dependencies
platforms :jruby do
  gem 'jdbc-sqlite3'
  gem 'jdbc-mysql'
  gem 'jdbc-postgres'
end
